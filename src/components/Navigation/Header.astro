---
import Image from 'astro/components/Image.astro'
import Logo from '../../assets/astro/astro.svg'
import ButtonAnimated from '../Buttons/Button-Fill-Side.astro'

import Navigation from '../Navigation/Navigation.astro'
const links = [
  { href: '#home', label: 'Home' },
  { href: '#services', label: 'Services' },
  { href: '#about', label: 'About' },
  { href: '#contact', label: 'Contact' },
]; 

---

<header class="main-header">
    <Image src={Logo} alt="Company Logo" />
    <Navigation links={links}/>
    <ButtonAnimated title="Get your Quote"/>
</header>


<style>
    .main-header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-md);
        width:  clamp(300px, 75%, 1440px);       
    }
</style>