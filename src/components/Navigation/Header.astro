---
import Image from 'astro/components/Image.astro'
import Logo from '../../assets/Logos/Ventori-logo-title-horizontal.png'
import ButtonAnimated from '../Buttons/Button-Fill-Side.astro'

import Navigation from '../Navigation/Navigation.astro'

const links = [
  { href: '#home', label: 'Home' },
  { href: '#services', label: 'Services' },
  { href: '#about', label: 'About' },
  { href: '#contact', label: 'Contact' },
];

---

<header class="main-header flex-row content-width">
    <a href="http://localhost:4321/"><Image class="header-logo" src={Logo} alt="Company Logo"/></a>

    <div class="desktop-only flex-row">
        <Navigation links={links}/>
    </div>
    
    <div class="desktop-only flex-row">
        
        <ButtonAnimated title="Get your Quote" link="http://localhost:4321/"/>
    </div>
    
    <!-- Hamburger Button (Mobile) -->
    <div class="mobile-only">
        <button id="hamburger-btn" class="text-white text-2xl">
          &#9776; <!-- Hamburger Icon -->
        </button>
    </div>
</header>


<style>
    .main-header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-0);    
    }

    .header-logo{
        max-height: var(--font-size-4);
        width: auto;
        height: auto;
    }
</style>