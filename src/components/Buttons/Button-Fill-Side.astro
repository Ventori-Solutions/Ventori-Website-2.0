---
import { Image } from "astro:assets";
import Arrow from '../../assets/Icons/arrow-right.png'

const {title = 'Click Me!', link} = Astro.props;


---


<a href={link}>
    <button class="btn-animated">
        <span style="display: flex; align-items: center; gap: var(--font-size--2);">
            <Image src={Arrow} class="btn-icon" alt="arrow icon" />
            <span class="btn-text">{title}</span>
        </span>
    </button>
</a>

<style>
    .btn-animated{
        position: relative;
        font-size: var(--font-size-0);
        color: var(--color-text-secondary); 
        background-color: var(--color-accent); 
        z-index: 1;
        overflow: hidden;
    }
    .btn-animated:hover
    {
        transform: scale(1.15);
        transition: transform 0.25s ease-in-out;     
    }
    .btn-animated:hover::before{
        width: 100%;        
    }
    .btn-animated:before {
        /* hover box */
        content: "";
        position: absolute;
        height: 100%;
        width: 0%;
        opacity: 1;
        top: 0;
        left: 0;
        z-index: -1;
        border-radius: var(--border-radius);
        transition: width 0.3s;
        
        background: linear-gradient(120deg, #ff6b6b, #feca57, #1dd1a1, #ff6b6b);
        background-size: 300% 100%;
        animation: gradientShift 3s infinite;
    }
    .btn-animated:hover{
        color: var(--color-text-secondary);  
        
        /*
        background-color: var(--color-accent); 
        */
    }

    .btn-icon{
        width: var(--font-size-2);
        height: var(--font-size-2);
        padding-right: 5px;        
    }
    .btn-text{
        font-size: var(--font-size-0);
        white-space: nowrap;
        margin: auto;
    }

    @keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
</style>