---
const {title = 'Click Me!'} = Astro.props;
---


<button class="btn-animated">{title}</button>

<style>
    .btn-animated{
        position: relative;
        font-size: var(--font-size-large);
        color: var(--color-text-secondary); 
        background-color: var(--color-accent); 
        z-index: 1;
        overflow: hidden;
    }
    .btn-animated:hover::before{
        width: 100%;        
    }
    .btn-animated:before {
        /* hover box */
        content: "";
        position: absolute;
        display: block;
        height: 100%;
        width: 0%;
        background-color: var(--color-secondary); 
        opacity: 1;
        top: 0;
        left: 0;
        z-index: -1;
        border-radius: var(--border-radius);
        transition: width 0.3s;
    }
    .btn-animated:hover{
        color: var(--color-text-secondary);  
        
        /*
        background-color: var(--color-accent); 
        */
    }
</style>